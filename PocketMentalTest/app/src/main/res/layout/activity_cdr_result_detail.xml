<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    android:weightSum="1">

    <TextView
        android:text="Categoria"
        android:textStyle="bold"
        android:paddingBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cdr_result_detail_categoryid" />
    <TextView
        android:text="@string/avaliacao_atribuida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp">
        <TextView
            android:text="CDR 1,0"
            android:background="@color/colorAccent"
            android:layout_width="50sp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:id="@+id/cdr_result_detail_result"/>
        <TextView
            android:text="Perda de memÃ³ria moderada, mais acentuada para fatos recentes; o deficit interfere em atividades do dia-a-dia"
            android:layout_width="match_parent"
            android:textAlignment="textStart"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/cdr_result_detail_description"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp">
        <TextView
            android:text="@string/ouvir_entrevista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10sp"
            android:layout_gravity="center"/>
        <ImageButton
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@android:drawable/ic_media_play"
            android:id="@+id/cdr_result_detail_playbackbtn"/>
        <ImageButton
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:background="@android:drawable/ic_media_pause"
            android:id="@+id/cdr_result_detail_stopbtn" />
    </LinearLayout>

    <TextView
        android:paddingTop="30sp"
        android:text="@string/observacoes_label"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <EditText
        android:hint="@string/observacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_weight="0.90" />

    <Button
        android:text="@string/salvar_observacoes"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/button_cdr_result_fechar"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@color/white" />
</LinearLayout>